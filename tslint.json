{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-console": false,
        "semicolon": [
            true,
            "always",
            "ignore-interfaces"
        ],
        "curly": [
            true,
            "as-needed"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "member-access": [
            true,
            "no-public"
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "private-constructor",
                    "protected-constructor",
                    "public-constructor",
             
                    "private-static-field",
                    "protected-static-field",
                    "public-static-field",
             
                    "private-instance-field",
                    "protected-instance-field",
                    "public-instance-field",
             
                    "private-static-method",
                    "protected-static-method",
                    "public-static-method",
             
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ],
                "alphabetize": false
            }
        ],
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore"
            ]
        },
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "max-line-length": [
            true,
            255
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "ordered-imports": true,
        "object-literal-sort-keys": false,
        "interface-name": false
    },
    "rulesDirectory": []
}